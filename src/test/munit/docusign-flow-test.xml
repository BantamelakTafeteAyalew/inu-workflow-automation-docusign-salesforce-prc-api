<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns="http://www.mulesoft.org/schema/mule/core"
	xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:munit="http://www.mulesoft.org/schema/mule/munit"
	xmlns:munit-tools="http://www.mulesoft.org/schema/mule/munit-tools"
	xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core"
	xsi:schemaLocation="
		http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
		http://www.mulesoft.org/schema/mule/munit http://www.mulesoft.org/schema/mule/munit/current/mule-munit.xsd
		http://www.mulesoft.org/schema/mule/munit-tools http://www.mulesoft.org/schema/mule/munit-tools/current/mule-munit-tools.xsd
		http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd">

	<munit:config name="docusign-flow-test-suite" doc:name="MUnit Configuration"/>

	<!-- ============================================== -->
	<!-- TEST: DocuSign Envelope Creation Success      -->
	<!-- ============================================== -->

	<munit:test name="docusign-envelope-create-success-test" doc:name="DocuSign Envelope Create Success Test" description="Test successful DocuSign envelope creation">
		
		<munit:behavior>
			
			<!-- Mock DocuSign OAuth Token Request -->
			<munit-tools:mock-when processor="http:request" doc:name="Mock DocuSign Token Request">
				<munit-tools:with-attributes>
					<munit-tools:with-attribute whereValue="DocuSign_HTTP_Request_Config" attributeName="config-ref"/>
					<munit-tools:with-attribute whereValue="/oauth/token" attributeName="path"/>
				</munit-tools:with-attributes>
				<munit-tools:then-return>
					<munit-tools:payload value='#[{"access_token": "mock-access-token-12345", "token_type": "Bearer", "expires_in": 3600}]' mediaType="application/json"/>
					<munit-tools:attributes value='#[{"statusCode": 200}]'/>
				</munit-tools:then-return>
			</munit-tools:mock-when>

			<!-- Mock DocuSign Envelope Creation Request -->
			<munit-tools:mock-when processor="http:request" doc:name="Mock DocuSign Envelope Request">
				<munit-tools:with-attributes>
					<munit-tools:with-attribute whereValue="DocuSign_HTTP_Request_Config" attributeName="config-ref"/>
					<munit-tools:with-attribute whereValue="POST" attributeName="method"/>
				</munit-tools:with-attributes>
				<munit-tools:then-return>
					<munit-tools:payload value='#[{
						"envelopeId": "ENV-12345678-ABCD-1234-EFGH-567890IJKLMN",
						"status": "sent",
						"statusDateTime": "2024-01-15T10:30:00.000Z",
						"uri": "/envelopes/ENV-12345678-ABCD-1234-EFGH-567890IJKLMN"
					}]' mediaType="application/json"/>
					<munit-tools:attributes value='#[{"statusCode": 201}]'/>
				</munit-tools:then-return>
			</munit-tools:mock-when>

			<!-- Mock Object Store Store -->
			<munit-tools:mock-when processor="os:store" doc:name="Mock OS Store">
				<munit-tools:then-return/>
			</munit-tools:mock-when>

			<!-- Set Test Event -->
			<munit:set-event doc:name="Set Test Event">
				<munit:payload value='#[null]'/>
				<munit:variables>
					<munit:variable key="correlationId" value="test-correlation-id-012"/>
					<munit:variable key="workflowId" value="WF-12345678"/>
					<munit:variable key="workflowState" value='#[{
						"workflowId": "WF-12345678",
						"workflowType": "CLAIM_ADJUSTER_APPROVAL",
						"referenceId": "CLM-902344",
						"status": "APPROVED"
					}]'/>
					<munit:variable key="documentContent" value="BASE64_ENCODED_PDF_CONTENT"/>
					<munit:variable key="signerEmail" value="signer@test.com"/>
					<munit:variable key="signerName" value="Test Signer"/>
				</munit:variables>
			</munit:set-event>

		</munit:behavior>

		<munit:execution>
			<flow-ref name="docusign-envelope-create-flow" doc:name="Execute DocuSign Envelope Create Flow"/>
		</munit:execution>

		<munit:validation>
			<!-- Assert Envelope ID is Set -->
			<munit-tools:assert-that doc:name="Assert Envelope ID Present" expression="#[vars.envelopeId]" is="#[MunitTools::notNullValue()]"/>
			
			<!-- Assert Envelope Status -->
			<munit-tools:assert-that doc:name="Assert Envelope Status" expression="#[vars.envelopeStatus]" is="#[MunitTools::equalTo('sent')]"/>
		</munit:validation>

	</munit:test>

	<!-- ============================================== -->
	<!-- TEST: DocuSign Envelope Creation Failure      -->
	<!-- ============================================== -->

	<munit:test name="docusign-envelope-create-failure-test" doc:name="DocuSign Envelope Create Failure Test" description="Test DocuSign envelope creation failure" expectedErrorType="APP:DOCUSIGN_ERROR">
		
		<munit:behavior>
			
			<!-- Mock DocuSign OAuth Token Request -->
			<munit-tools:mock-when processor="http:request" doc:name="Mock DocuSign Token Request">
				<munit-tools:with-attributes>
					<munit-tools:with-attribute whereValue="DocuSign_HTTP_Request_Config" attributeName="config-ref"/>
					<munit-tools:with-attribute whereValue="/oauth/token" attributeName="path"/>
				</munit-tools:with-attributes>
				<munit-tools:then-return>
					<munit-tools:payload value='#[{"access_token": "mock-access-token-12345"}]' mediaType="application/json"/>
					<munit-tools:attributes value='#[{"statusCode": 200}]'/>
				</munit-tools:then-return>
			</munit-tools:mock-when>

			<!-- Mock DocuSign Envelope Creation Request - Return Empty Envelope ID -->
			<munit-tools:mock-when processor="http:request" doc:name="Mock DocuSign Envelope Request">
				<munit-tools:with-attributes>
					<munit-tools:with-attribute whereValue="DocuSign_HTTP_Request_Config" attributeName="config-ref"/>
					<munit-tools:with-attribute whereValue="POST" attributeName="method"/>
				</munit-tools:with-attributes>
				<munit-tools:then-return>
					<munit-tools:payload value='#[{"error": "INVALID_REQUEST", "message": "Document content is invalid"}]' mediaType="application/json"/>
					<munit-tools:attributes value='#[{"statusCode": 400}]'/>
				</munit-tools:then-return>
			</munit-tools:mock-when>

			<!-- Set Test Event -->
			<munit:set-event doc:name="Set Test Event">
				<munit:payload value='#[null]'/>
				<munit:variables>
					<munit:variable key="correlationId" value="test-correlation-id-013"/>
					<munit:variable key="workflowId" value="WF-12345678"/>
					<munit:variable key="workflowState" value='#[{
						"workflowId": "WF-12345678",
						"workflowType": "CLAIM_ADJUSTER_APPROVAL",
						"referenceId": "CLM-902344",
						"status": "APPROVED"
					}]'/>
				</munit:variables>
			</munit:set-event>

		</munit:behavior>

		<munit:execution>
			<flow-ref name="docusign-envelope-create-flow" doc:name="Execute DocuSign Envelope Create Flow"/>
		</munit:execution>

	</munit:test>

	<!-- ============================================== -->
	<!-- TEST: DocuSign Status Update Success          -->
	<!-- ============================================== -->

	<munit:test name="docusign-status-update-success-test" doc:name="DocuSign Status Update Success Test" description="Test successful DocuSign status update callback">
		
		<munit:behavior>
			
			<!-- Mock Object Store Retrieve for Envelope -->
			<munit-tools:mock-when processor="os:retrieve" doc:name="Mock OS Retrieve Envelope">
				<munit-tools:with-attributes>
					<munit-tools:with-attribute whereValue="DocuSign_Object_Store" attributeName="objectStore"/>
				</munit-tools:with-attributes>
				<munit-tools:then-return>
					<munit-tools:payload value='#[{
						"envelopeId": "ENV-12345678",
						"workflowId": "WF-12345678",
						"referenceId": "CLM-902344",
						"status": "sent"
					}]'/>
				</munit-tools:then-return>
			</munit-tools:mock-when>

			<!-- Mock Object Store Retrieve for Workflow -->
			<munit-tools:mock-when processor="os:retrieve" doc:name="Mock OS Retrieve Workflow">
				<munit-tools:with-attributes>
					<munit-tools:with-attribute whereValue="Workflow_Object_Store" attributeName="objectStore"/>
				</munit-tools:with-attributes>
				<munit-tools:then-return>
					<munit-tools:payload value='#[{
						"workflowId": "WF-12345678",
						"status": "APPROVED_PENDING_SIGNATURE"
					}]'/>
				</munit-tools:then-return>
			</munit-tools:mock-when>

			<!-- Mock Object Store Store -->
			<munit-tools:mock-when processor="os:store" doc:name="Mock OS Store">
				<munit-tools:then-return/>
			</munit-tools:mock-when>

			<!-- Mock Salesforce Upsert -->
			<munit-tools:mock-when processor="salesforce:upsert" doc:name="Mock Salesforce Upsert">
				<munit-tools:then-return>
					<munit-tools:payload value='#[{"items": [{"id": "a0B1234567890AB", "successful": true}]}]'/>
				</munit-tools:then-return>
			</munit-tools:mock-when>

			<!-- Set Test Event -->
			<munit:set-event doc:name="Set Test Event">
				<munit:payload value='#[{
					"envelopeId": "ENV-12345678",
					"status": "completed",
					"completedDateTime": "2024-01-15T14:30:00.000Z"
				}]' mediaType="application/json"/>
				<munit:variables>
					<munit:variable key="correlationId" value="test-correlation-id-014"/>
				</munit:variables>
			</munit:set-event>

		</munit:behavior>

		<munit:execution>
			<flow-ref name="docusign-status-update-flow" doc:name="Execute DocuSign Status Update Flow"/>
		</munit:execution>

		<munit:validation>
			<!-- Assert Acknowledgment -->
			<munit-tools:assert-that doc:name="Assert Acknowledged" expression="#[payload.acknowledged]" is="#[MunitTools::equalTo(true)]"/>
			
			<!-- Assert Envelope ID -->
			<munit-tools:assert-that doc:name="Assert Envelope ID" expression="#[payload.envelopeId]" is="#[MunitTools::equalTo('ENV-12345678')]"/>
		</munit:validation>

	</munit:test>

	<!-- ============================================== -->
	<!-- TEST: DocuSign Status Update Unknown Envelope -->
	<!-- ============================================== -->

	<munit:test name="docusign-status-update-unknown-envelope-test" doc:name="DocuSign Status Update Unknown Envelope Test" description="Test DocuSign status update for unknown envelope">
		
		<munit:behavior>
			
			<!-- Mock Object Store Retrieve returning null -->
			<munit-tools:mock-when processor="os:retrieve" doc:name="Mock OS Retrieve">
				<munit-tools:then-return>
					<munit-tools:payload value='#[null]'/>
				</munit-tools:then-return>
			</munit-tools:mock-when>

			<!-- Set Test Event -->
			<munit:set-event doc:name="Set Test Event">
				<munit:payload value='#[{
					"envelopeId": "ENV-UNKNOWN",
					"status": "completed"
				}]' mediaType="application/json"/>
				<munit:variables>
					<munit:variable key="correlationId" value="test-correlation-id-015"/>
				</munit:variables>
			</munit:set-event>

		</munit:behavior>

		<munit:execution>
			<flow-ref name="docusign-status-update-flow" doc:name="Execute DocuSign Status Update Flow"/>
		</munit:execution>

		<munit:validation>
			<!-- Assert Acknowledgment still returned -->
			<munit-tools:assert-that doc:name="Assert Acknowledged" expression="#[payload.acknowledged]" is="#[MunitTools::equalTo(true)]"/>
		</munit:validation>

	</munit:test>

</mule>