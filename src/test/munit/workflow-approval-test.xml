			<munit-tools:mock-when processor="os:retrieve" doc:name="Mock OS Retrieve">
				<munit-tools:with-attributes>
					<munit-tools:with-attribute whereValue="Workflow_Object_Store" attributeName="objectStore"/>
				</munit-tools:with-attributes>
				<munit-tools:then-return>
					<munit-tools:payload value='#[{
						"workflowId": "WF-12345678",
						"workflowType": "CLAIM_ADJUSTER_APPROVAL",
						"referenceId": "CLM-902344",
						"status": "IN_PROGRESS"
					}]'/>
				</munit-tools:then-return>
			</munit-tools:mock-when>

			<!-- Mock Workflow Engine HTTP Request -->
			<munit-tools:mock-when processor="http:request" doc:name="Mock Workflow Engine Request">
				<munit-tools:with-attributes>
					<munit-tools:with-attribute whereValue="Workflow_HTTP_Request_Config" attributeName="config-ref"/>
				</munit-tools:with-attributes>
				<munit-tools:then-return>
					<munit-tools:payload value='#[{"status": "UPDATED"}]' mediaType="application/json"/>
					<munit-tools:attributes value='#[{"statusCode": 200}]'/>
				</munit-tools:then-return>
			</munit-tools:mock-when>

			<!-- Mock Object Store Store -->
			<munit-tools:mock-when processor="os:store" doc:name="Mock OS Store">
				<munit-tools:then-return/>
			</munit-tools:mock-when>

			<!-- Mock Salesforce Upsert -->
			<munit-tools:mock-when processor="salesforce:upsert" doc:name="Mock Salesforce Upsert">
				<munit-tools:then-return>
					<munit-tools:payload value='#[{"items": [{"id": "a0B1234567890AB", "successful": true}]}]'/>
				</munit-tools:then-return>
			</munit-tools:mock-when>

			<!-- Set Test Event -->
			<munit:set-event doc:name="Set Test Event">
				<munit:payload value='#[{
					"decision": "REJECTED",
					"actor": "adjuster.john",
					"comments": "Claim rejected due to insufficient documentation"
				}]' mediaType="application/json"/>
				<munit:attributes value='#[{
					"uriParams": {"workflowId": "WF-12345678"},
					"headers": {"client_id": "test-client", "client_secret": "test-secret"}
				}]'/>
				<munit:variables>
					<munit:variable key="correlationId" value="test-correlation-id-010"/>
				</munit:variables>
			</munit:set-event>

		</munit:behavior>

		<munit:execution>
			<flow-ref name="workflow-approval-flow" doc:name="Execute Workflow Approval Flow"/>
		</munit:execution>

		<munit:validation>
			<!-- Assert Response Status -->
			<munit-tools:assert-that doc:name="Assert HTTP Status 200" expression="#[vars.httpStatus]" is="#[MunitTools::equalTo(200)]"/>
			
			<!-- Assert Status -->
			<munit-tools:assert-that doc:name="Assert Status REJECTED" expression="#[payload.status]" is="#[MunitTools::equalTo('REJECTED')]"/>
		</munit:validation>

	</munit:test>

	<!-- ============================================== -->
	<!-- TEST: Workflow Approval Not Found             -->
	<!-- ============================================== -->

	<munit:test name="workflow-approval-not-found-test" doc:name="Workflow Approval Not Found Test" description="Test workflow approval for non-existent workflow" expectedErrorType="APP:RESOURCE_NOT_FOUND">
		
		<munit:behavior>
			
			<!-- Mock Object Store Retrieve returning null -->
			<munit-tools:mock-when processor="os:retrieve" doc:name="Mock OS Retrieve">
				<munit-tools:then-return>
					<munit-tools:payload value='#[null]'/>
				</munit-tools:then-return>
			</munit-tools:mock-when>

			<!-- Set Test Event -->
			<munit:set-event doc:name="Set Test Event">
				<munit:payload value='#[{
					"decision": "APPROVED",
					"actor": "adjuster.john",
					"comments": "Approved"
				}]' mediaType="application/json"/>
				<munit:attributes value='#[{
					"uriParams": {"workflowId": "WF-NONEXISTENT"},
					"headers": {"client_id": "test-client", "client_secret": "test-secret"}
				}]'/>
				<munit:variables>
					<munit:variable key="correlationId" value="test-correlation-id-011"/>
				</munit:variables>
			</munit:set-event>

		</munit:behavior>

		<munit:execution>
			<flow-ref name="workflow-approval-flow" doc:name="Execute Workflow Approval Flow"/>
		</munit:execution>

	</munit:test>

</mule>